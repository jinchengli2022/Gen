<mujoco model="black_cup">
  <asset>
    <!-- 原始mesh单位是mm -->
    <!-- black_cup 读取到的建模中心为0.85 yellow_cup读取到的建模中心为0.83-->
    <mesh file="meshes/black_cup/black_cup.obj" name="black_cup_mesh" scale="0.001 0.001 0.001"/> 
    <!-- 显式定义纹理，确保路径正确 -->
    <texture file="meshes/black_cup/Image_0.png" name="tex-black-cup" type="2d"/>
    <!-- 显式定义材质，引用上面的纹理 -->
    <material name="black_cup_mat" reflectance="0.5" texrepeat="1 1" texture="tex-black-cup"/>
  </asset>
  <worldbody>
    <body>
      <body name="object">
        <!-- 显式指定 material，利用 OBJ 的 UV 坐标进行贴图 -->
        <geom pos="0 0 0" mesh="black_cup_mesh" type="mesh" solimp="0.998 0.998 0.001" solref="0.001 1" density="1000" friction="0.95 0.3 0.1" group="0" condim="4" material="black_cup_mat"/>
        <!-- <geom pos="0 0 0" mesh="black_cup_mesh" type="mesh" solimp="0.998 0.998 0.001" solref="0.001 1" density="1000" friction="0.95 0.3 0.1" group="0" condim="4"/> -->
      </body>
      <!-- 标记物体的底部接触点、中心点以及水平边缘点，用于随机摆放时的碰撞检测 -->
      <site rgba="0 0 0 0" size="0.005" pos="0 0 -0.05" name="bottom_site"/>
      <site rgba="0 0 0 0" size="0.005" pos="0 0 0.05" name="top_site"/>
      <site rgba="0 0 0 0" size="0.005" pos="0.085 0 0" name="horizontal_radius_site"/>
    </body>
  </worldbody>
</mujoco>
